= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :quantity
    = f.number_field :quantity
  = f.fields_for :public, @item.public do |f_pub|
    %h3 Public Information
    .field
      = f_pub.label :title
      %br
      = f_pub.text_field :title
    .field
      = f_pub.label :body
      %br
      = f_pub.text_area :body
  .actions
    = f.submit 'Save'
